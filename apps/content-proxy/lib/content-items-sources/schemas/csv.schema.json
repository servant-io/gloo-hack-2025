{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Content Item Source - CSV",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "url"],
  "properties": {
    "name": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "autoSync": {
      "type": "boolean"
    },
    "instructions": {
      "type": "object",
      "properties": {
        "defaultContentItemType": {
          "type": "string",
          "enum": ["article", "video", "audio"]
        },
        "headers": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["article", "video", "audio"]
            },
            "name": { "type": "string" },
            "shortDescription": { "type": "string" },
            "thumbnailUrl": { "type": "string" },
            "contentUrl": { "type": "string" }
          },
          "required": ["contentUrl"]
        }
      }
    }
  }
}
